
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

@model LittleBird.UI.Areas.Admin.Models.VM.UpdateTweetVM
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Tweet/Add">Add Article</a></li>
        <li><a href="/Admin/Tweet/List">Article List</a></li>
        <li class="active">Tweet List</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update tweets</h3>
                </div>
                <form action="/Admin/Tweet/Update" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                       
                        <div class="form-group">
                            <label for="text">Content</label>
                            <input type="text" name="TweetContent" value="@Model.Tweet.TweetContent" class="form-control" placeholder="TweetContent">
                        </div>
                        <div class="form-group">
                            <label for="text">Publish Date</label>
                            <input type="text" name="PublishDate" value="@Model.Tweet.PublishDate" class="form-control" placeholder="Publish Date">
                        </div>
                        
                       
                        <div class="form-group">
                            <label for="AppUserID">Choose AppUser</label>
                            <select name="AppUserID" class="form-control">
                                @foreach (var item in Model.AppUsers)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="file" name="Image" value="@Model.Tweet.ImagePath" class="form-control" />
                        </div>
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.Tweet.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


