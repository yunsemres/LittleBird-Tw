
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

@model LittleBird.UI.Areas.Admin.Models.VM.AddTweetVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Tweet/List">Article List</a></li>
        <li class="active">Add Article</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Tweet</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form action="/Admin/Tweet/Add" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="TweetContent">Content</label>
                            <input type="text" name="TweetContent" class="form-control" placeholder="TweetContent">
                        </div>
                        <div class="form-group">
                            <label for="AppUserID">Member</label>
                            <select name="AppUserID" class="form-control">
                                @foreach (var item in Model.AppUsers)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>



                        <div class="form-group">
                            <label for="Image">Image</label>
                            <input type="file" name="Image" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
